<UserControl x:Class="com.mirle.ibg3k0.ohxc.winform.UI.Components.WPF_UserControl.uc_TextBlock_H"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:com.mirle.ibg3k0.ohxc.winform.UI.Components.WPF_UserControl"
             mc:Ignorable="d" FontFamily="MicrosoftSansSerif" Foreground="#1b2338" d:DesignHeight="30" d:DesignWidth="378">
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="172"/>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="187"/>
        </Grid.ColumnDefinitions>
        <TextBlock Name="txb_Title" Text="Title" HorizontalAlignment="Right"></TextBlock>
        <TextBlock Text=":" Grid.Column="1"></TextBlock>
        <TextBlock Name="txb_Value" Text="Value" Grid.Column="2"></TextBlock>
    </Grid>
</UserControl>
