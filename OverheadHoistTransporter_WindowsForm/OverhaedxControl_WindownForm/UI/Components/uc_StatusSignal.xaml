<UserControl x:Class="WPF.Components.uc_StatusSignal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF.Components"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="250">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="TextBlock_Default">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="#1b2338"/>
            <Setter Property="FontFamily" Value="MicrosoftSansSerif"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Border BorderBrush="#e6e6e6" BorderThickness="5" Background="White" Height="50">
            <TextBlock Name="TitleName" Style="{StaticResource TextBlock_Default}" VerticalAlignment="Center" Text="TitleName"/>
        </Border>
    </Grid>
</UserControl>
